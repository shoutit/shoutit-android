<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shoutit.app.android">

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.FLASHLIGHT" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".view.media.RecordMediaActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation" />
        <activity
            android:name=".view.media.VideoCompressActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation" />
        <activity
            android:name=".view.main.MainActivity"
            android:theme="@style/AppTheme.WithDrawer">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.intro.IntroActivity"
            android:theme="@style/IntroActivityTheme" />
        <activity
            android:name=".view.signin.LoginActivity"
            android:theme="@style/LoginActivityTheme" />
        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <activity android:name=".view.loginintro.LoginIntroActivity" />
        <activity android:name=".view.webview.HtmlAssetViewerActivity" />
        <activity
            android:name=".view.about.AboutActivity"
            android:theme="@style/PreferenceStyle" />
        <activity android:name=".view.postlogininterest.PostLoginInterestActivity" />
        <activity
            android:name=".view.postlogininterest.postsignupsecond.PostSignupSecondActivity"
            android:theme="@style/TranslucentStatusBar" />
        <activity android:name=".view.chats.ChatActivity"/>
        <activity android:name=".view.chats.chatsfirstconversation.ChatFirstConversationActivity"/>
        <activity android:name=".view.shouts.selectshout.SelectShoutActivity"/>
        <activity android:name=".view.location.LocationActivity" />
        <activity android:name=".view.discover.DiscoverActivity" />
        <activity android:name=".view.shouts.discover.DiscoverShoutsActivity" />
        <activity android:name=".view.settings.SettingsActivity" />
        <activity android:name=".view.createshout.request.CreateRequestActivity" />
        <activity android:name=".view.createshout.location.LocationActivity" />
        <activity android:name=".view.createshout.edit.EditShoutActivity" />
        <activity android:name=".view.createshout.publish.PublishShoutActivity" />
        <activity android:name=".view.signin.forgotpassword.ForgotPasswordActivity" />
        <activity
            android:name=".view.search.main.MainSearchActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden">
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name=".view.search.subsearch.SubSearchActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden">
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity android:name=".view.search.results.shouts.SearchShoutsResultsActivity" />
        <activity android:name=".view.search.results.profiles.SearchProfilesResultsActivity" />
        <activity
            android:name=".view.settings.account.AccountActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".view.shout.ShoutActivity" />
        <activity
            android:name=".view.profile.UserOrPageProfileActivity"
            android:theme="@style/TranslucentStatusBar" />
        <activity
            android:name=".view.profile.tagprofile.TagProfileActivity"
            android:theme="@style/TranslucentStatusBar" />
        <activity
            android:name=".view.editprofile.EditProfileActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".view.notifications.NotificationsActivity" />
        <activity android:name=".view.videoconversation.VideoConversationActivity"
            android:screenOrientation="portrait"/>

        <!-- Facebook -->
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <!-- Crashlytics -->
        <meta-data
            android:name="com.crashlytics.ApiKey"
            android:value="b058b2dcbf8b8f864860fe9fe12789317aba9da1" />

        <!-- Fabric -->
        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="b058b2dcbf8b8f864860fe9fe12789317aba9da1" />

        <!-- Maps, Places -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_api_key" />

        <service
            android:name="com.amazonaws.mobileconnectors.s3.transferutility.TransferService"
            android:enabled="true" />

        <activity
            android:name=".view.videoconversation.DialogCallActivity"
            android:screenOrientation="portrait"
            android:theme="@style/TranslucentBackground"/>

    </application>

</manifest>
