<manifest package="com.shoutit.app.android"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".view.intro.IntroActivity"
            android:theme="@style/TranslucentStatusBar">
        </activity>

        <activity
            android:name=".view.signin.LoginActivity"
            android:theme="@style/TranslucentStatusBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- Crashlytics -->
        <meta-data
            android:name="com.crashlytics.ApiKey"
            android:value="df7a00236cfb54396bdf1cb5c0a37140f2edc1f4"/>

        <!-- Fabric -->
        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="df7a00236cfb54396bdf1cb5c0a37140f2edc1f4"/>

    </application>
</manifest>
