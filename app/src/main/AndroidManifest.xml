<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="com.shoutit.app.android"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-feature android:name="android.hardware.camera"/>
    <uses-feature android:name="android.hardware.camera.autofocus"/>
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true"/>

    <uses-permission android:name="android.permission.CALL_PHONE"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.FLASHLIGHT"/>
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>


    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".view.media.RecordMediaActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:screenOrientation="portrait"
            android:theme="@style/TransparentStatusBar"/>
        <activity
            android:name=".view.media.VideoCompressActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".view.main.MainActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.WithDrawer">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>

            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>

                <data
                    android:host="home"
                    android:scheme="shoutit"/>
                <data
                    android:host="discover"
                    android:scheme="shoutit"/>
                <data
                    android:host="browse"
                    android:scheme="shoutit"/>
                <data
                    android:host="chats"
                    android:scheme="shoutit"/>
                <data
                    android:host="public_chats"
                    android:scheme="shoutit"/>
                <data
                    android:host="create_shout"
                    android:scheme="shoutit"/>
            </intent-filter>

        </activity>
        <activity
            android:name=".view.intro.IntroActivity"
            android:screenOrientation="portrait"
            android:theme="@style/IntroActivityTheme"/>
        <activity
            android:name=".view.signin.LoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/LoginActivityTheme"/>
        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"/>
        <activity android:name=".view.loginintro.LoginIntroActivity"
                  android:screenOrientation="portrait"/>
        <activity android:name=".view.webview.HtmlAssetViewerActivity"
                  android:screenOrientation="portrait"/>
        <activity
            android:name=".view.about.AboutActivity"
            android:screenOrientation="portrait"
            android:theme="@style/PreferenceStyle"/>
        <activity
            android:name=".view.postlogininterest.PostLoginInterestActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".view.postlogininterest.postsignupsecond.PostSignupSecondActivity"
            android:screenOrientation="portrait"
            android:theme="@style/TranslucentStatusBar"
        />
        <activity android:name=".view.location.LocationActivity"
                  android:screenOrientation="portrait"/>
        <activity android:name=".view.promote.PromoteShoutInfoActivity"
                  android:screenOrientation="portrait"/>
        <activity android:name=".view.credits.transactions.TransactionsActivity"
                  android:screenOrientation="portrait">

            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>

                <data
                    android:host="credit_transactions"
                    android:scheme="shoutit"/>
            </intent-filter>

        </activity>
        <activity
            android:name=".view.discover.DiscoverActivity"
            android:screenOrientation="portrait">

            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>

                <data
                    android:host="discover?id="
                    android:scheme="shoutit"/>
            </intent-filter>

        </activity>
        <activity
            android:name=".view.invitefriends.suggestionsusers.UserSuggestionActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".view.invitefriends.suggestionspages.PagesSuggestionActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".view.chats.ChatActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>

                <data
                    android:host="conversation"
                    android:scheme="shoutit"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".view.chats.chatsfirstconversation.ChatFirstConversationActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".view.shouts.selectshout.SelectShoutActivity"
                  android:screenOrientation="portrait"/>
        <activity android:name=".view.shouts.discover.DiscoverShoutsActivity"
                  android:screenOrientation="portrait"/>
        <activity
            android:name=".view.settings.SettingsActivity"
            android:screenOrientation="portrait">

            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>

                <data
                    android:host="settings"
                    android:scheme="shoutit"/>
            </intent-filter>

        </activity>
        <activity android:name=".view.createshout.request.CreateRequestActivity"
                  android:screenOrientation="portrait"/>
        <activity android:name=".view.location.LocationActivityForResult"
                  android:screenOrientation="portrait"/>
        <activity android:name=".view.createpage.pagecategory.CreatePageCategoryActivity"
                  android:screenOrientation="portrait"/>
        <activity android:name=".view.createpage.pagedetails.newuser.CreatePageDetailsActivity"
                  android:windowSoftInputMode="adjustResize"
                  android:screenOrientation="portrait"/>
        <activity
            android:name=".view.createshout.edit.EditShoutActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".view.createshout.publish.PublishShoutActivity"
                  android:screenOrientation="portrait"/>
        <activity android:name=".view.signin.forgotpassword.ForgotPasswordActivity"
                  android:screenOrientation="portrait"/>
        <activity
            android:name=".view.search.main.MainSearchActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden">
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable"/>

            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>

                <data
                    android:host="search"
                    android:scheme="shoutit"/>
            </intent-filter>

        </activity>
        <activity
            android:name=".view.search.subsearch.SubSearchActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden">
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable"/>
        </activity>
        <activity android:name=".view.search.results.shouts.SearchShoutsResultsActivity"
                  android:screenOrientation="portrait"/>
        <activity android:name=".view.search.results.profiles.SearchProfilesResultsActivity"
                  android:screenOrientation="portrait"/>
        <activity
            android:name=".view.settings.account.AccountActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize"/>
        <activity
            android:name=".view.shout.ShoutActivity"
            android:screenOrientation="portrait">

            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>

                <data
                    android:host="shout"
                    android:scheme="shoutit"/>
            </intent-filter>

        </activity>
        <activity
            android:name=".view.profile.user.UserProfileActivity"
            android:screenOrientation="portrait"
            android:theme="@style/TranslucentStatusBar"/>

        <activity
            android:name=".view.profile.ProfileDeepLinkDispatchActivity"
            android:screenOrientation="portrait"
            android:theme="@style/TranslucentStatusBar">

            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>

                <data
                    android:host="profile"
                    android:scheme="shoutit"/>
            </intent-filter>

        </activity>
        <activity
            android:name=".view.profile.page.PageProfileActivity"
            android:screenOrientation="portrait"
            android:theme="@style/TranslucentStatusBar"/>
        <activity
            android:name=".view.profile.tagprofile.TagProfileActivity"
            android:screenOrientation="portrait"
            android:theme="@style/TranslucentStatusBar"/>
        <activity
            android:name=".view.profile.user.editprofile.EditProfileActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden"/>
        <activity
            android:name=".view.profile.page.edit.EditPageActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden"/>
        <activity
            android:name=".view.notifications.NotificationsActivity"
            android:screenOrientation="portrait">

            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>

                <data
                    android:host="notifications"
                    android:scheme="shoutit"/>
            </intent-filter>

        </activity>
        <activity
            android:name=".view.videoconversation.OutgoingVideoCallActivity"
            android:launchMode="singleTop"
            android:excludeFromRecents="true"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".view.videoconversation.IncomingVideoCallActivity"
            android:launchMode="singleTop"
            android:excludeFromRecents="true"
            android:screenOrientation="portrait"/>

        <activity android:name=".view.gallery.GalleryActivity"/>
        <activity android:name=".view.verifyemail.VerifyEmailActivity"
                  android:screenOrientation="portrait"
                  android:windowSoftInputMode="adjustResize"/>
        <activity android:name=".view.conversations.ConversationsActivity"
                  android:screenOrientation="portrait"/>
        <activity android:name=".view.chats.chat_info.chats_participants.ChatParticipantsActivity"
                  android:screenOrientation="portrait"/>
        <activity android:name=".view.chats.public_chat.CreatePublicChatActivity"
                  android:screenOrientation="portrait"
                  android:windowSoftInputMode="adjustPan"/>
        <activity
            android:name=".view.chats.chat_info.chats_users_list.chats_blocked.ChatBlockedUsersActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".view.chats.chat_info.chats_users_list.chats_select.ChatSelectUsersActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".view.chats.chat_info.ChatInfoActivity"
                  android:screenOrientation="portrait"/>
        <activity android:name=".view.createshout.CreateShoutDialogActivity"
                  android:screenOrientation="portrait"
                  android:theme="@style/AppTheme.DialogActivity"/>
        <activity android:name=".view.listenings.ListeningsActivity"
                  android:screenOrientation="portrait"/>
        <activity android:name=".view.listeners.ListenersActivity"
                  android:screenOrientation="portrait"/>

        <activity
            android:name=".view.videoconversation.DialogCallActivity"
            android:screenOrientation="portrait"
            android:excludeFromRecents="true"
            android:launchMode="singleInstance"
            android:theme="@style/TranslucentBackground"/>

        <activity android:name=".view.chooseprofile.SelectProfileActivity"
                  android:screenOrientation="portrait"/>

        <activity android:name=".view.chats.chat_shouts.ChatShoutsActivity"
                  android:screenOrientation="portrait"/>

        <activity android:name=".view.chats.chat_media_gallery.ChatMediaGalleryActivity"/>

        <activity android:name=".view.invitefriends.facebookfriends.FacebookFriendsActivity"
                  android:screenOrientation="portrait"/>

        <activity android:name=".view.invitefriends.contactsfriends.ContactsFriendsActivity"
                  android:screenOrientation="portrait"/>

        <activity android:name=".view.promote.PromoteActivity"
                  android:screenOrientation="portrait"/>

        <activity android:name=".view.promote.promoted.PromotedActivity"
                  android:screenOrientation="portrait"/>

        <activity android:name=".view.pages.my.SelectListenersActivity"
            android:screenOrientation="portrait"/>

        <activity android:name=".view.verifybusiness.VerifyBusinessActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize"/>

        <receiver
            android:name="com.mixpanel.android.mpmetrics.GCMReceiver"
            android:permission="com.google.android.c2dm.permission.SEND">
            <intent-filter>
                <action
                    android:name="com.google.android.c2dm.intent.RECEIVE"/>
                <action
                    android:name="com.google.android.c2dm.intent.REGISTRATION"/>
                <category android:name="${applicationId}"/>
            </intent-filter>
        </receiver>

        <!-- Mixpanel -->
        <activity android:name="com.mixpanel.android.surveys.SurveyActivity"
            android:theme="@style/com_mixpanel_android_SurveyActivityTheme"/>

        <meta-data
            android:name="com.mixpanel.android.MPConfig.EnableDebugLogging"
            android:value="true" />

        <meta-data android:name="com.mixpanel.android.MPConfig.AutoShowMixpanelUpdates"
            android:value="false" />

        <receiver
            android:name="com.mixpanel.android.mpmetrics.GCMReceiver"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action
                    android:name="com.google.android.c2dm.intent.RECEIVE" />
                <action
                    android:name="com.google.android.c2dm.intent.REGISTRATION" />
                <category android:name="${applicationId}" />
            </intent-filter>
        </receiver>

        <!-- Facebook -->
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id"/>

        <!-- Crashlytics -->
        <meta-data
            android:name="com.crashlytics.ApiKey"
            android:value="b058b2dcbf8b8f864860fe9fe12789317aba9da1"/>

        <!-- Fabric -->
        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="b058b2dcbf8b8f864860fe9fe12789317aba9da1"/>

        <!-- Maps, Places -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_api_key"/>

        <meta-data android:name="com.mixpanel.android.MPConfig.ResourcePackageName"
                   android:value="com.shoutit.app.android"/>

        <service
            android:name="com.amazonaws.mobileconnectors.s3.transferutility.TransferService"
            android:enabled="true"/>

        <provider
            android:name="com.adobe.creativesdk.aviary.internal.cds.CdsProvider"
            android:authorities="${applicationId}.CdsProvider"
            android:exported="false"/>

    </application>


</manifest>
