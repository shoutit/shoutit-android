<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_bg_color"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/login_toolbar"
            android:theme="@style/WhiteToolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:navigationIcon="@drawable/ic_blue_arrow"
            android:title="">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_shoutit_logo"/>

        </android.support.v7.widget.Toolbar>

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_below="@id/login_toolbar"
            android:background="@drawable/toolbar_drop_shadow" />

        <FrameLayout
            android:id="@+id/login_sign_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/login_bottom_actions_container"
            android:layout_below="@+id/login_toolbar"/>

        <include layout="@layout/login_bottom_actions"
            android:id="@+id/login_bottom_actions_container"/>

    </RelativeLayout>

</ScrollView>
