<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/video_calls_semi_transparent_background"
    tools:context="com.shoutit.app.android.view.videoconversation.DialogCallActivity">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:minHeight="160dp"
        android:gravity="center_horizontal"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:background="@drawable/shape_calling_background">

        <TextView
            android:id="@+id/dialog_call_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/video_calls_caller_name"
            android:textColor="@android:color/darker_gray"
            android:textSize="16sp" />
        <View
            android:id="@+id/dialog_call_separator"
            android:layout_width="match_parent"
            android:layout_height="4dp"/>

        <Button
            android:id="@+id/dialog_call_accept"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/shape_answer_call"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="@string/video_calls_accept_call"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <Button
            android:id="@+id/dialog_call_reject"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/shape_discard_call"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:textStyle="bold"
            android:text="@string/video_calls_reject_call"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="16sp" />


    </LinearLayout>

</RelativeLayout>
