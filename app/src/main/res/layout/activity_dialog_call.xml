<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/video_calls_semi_transparent_background"
    tools:context="com.shoutit.app.android.view.videoconversation.DialogCallActivity">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="180dp"
        android:layout_marginTop="50dp"
        android:gravity="center_vertical"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_calling_background">

        <View
            android:id="@+id/dialog_call_separator"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_centerInParent="true" />

        <Button
            android:id="@+id/dialog_call_accept"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:layout_above="@id/dialog_call_separator"
            android:layout_centerInParent="true"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_call_button"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="@string/video_calls_accept_call"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <Button
            android:id="@+id/dialog_call_reject"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:layout_below="@id/dialog_call_separator"
            android:layout_centerInParent="true"
            android:layout_marginTop="5dp"
            android:background="@drawable/shape_dismiss_call_button"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="@string/video_calls_reject_call"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/dialog_call_accept"
            android:layout_centerHorizontal="true"
            android:text="@string/video_calls_caller_name"
            android:textColor="@android:color/darker_gray"
            android:textSize="16sp" />
    </RelativeLayout>

</RelativeLayout>
