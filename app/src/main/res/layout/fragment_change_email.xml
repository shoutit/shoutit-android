<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/default_bg_color">

    <android.support.design.widget.TextInputLayout
        android:theme="@style/BlueEditText"
        app:hintTextAppearance="@style/BlueInputStyle"
        android:id="@+id/account_change_email_til"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/account_change_email_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionDone"
            android:textSize="16sp"
            android:maxLines="1"
            android:inputType="textEmailAddress"
            android:hint="@string/settings_new_email"/>

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/account_change_email_confirm_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="12dp"
        android:text="@string/settings_change_email"
        android:layout_below="@+id/account_change_email_til"
        android:textColor="@android:color/white"/>

    <FrameLayout
        android:id="@+id/base_progress"
        android:clickable="true"
        android:layout_centerInParent="true"
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

    </FrameLayout>

</RelativeLayout>