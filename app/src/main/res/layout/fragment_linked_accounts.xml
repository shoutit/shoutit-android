<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/progress_bar_linked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_centerInParent="true"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/linked_accounts_facebook_tv"
                style="@style/LinkedAccountsItem"
                android:layout_alignParentTop="true"
                android:text="@string/linked_accounts_facebook"/>

            <TextView
                android:id="@+id/linked_accounts_profile_fb_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/linked_accounts_facebook_tv"
                android:paddingBottom="5dp"
                android:paddingLeft="16dp"
                android:singleLine="true"
                android:textColor="@color/black_54"
                android:textSize="12sp"
                tools:text="username username username"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/black_12"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/linked_accounts_google_tv"
                style="@style/LinkedAccountsItem"
                android:text="@string/linked_accounts_google"/>

            <TextView
                android:id="@+id/linked_accounts_profile_g_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/linked_accounts_google_tv"
                android:paddingBottom="5dp"
                android:paddingLeft="16dp"
                android:singleLine="true"
                android:textColor="@color/black_54"
                android:textSize="12sp"
                tools:text="username username username"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/black_12"/>

    </LinearLayout>
</RelativeLayout>
