<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/search_results_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/default_bg_color">

        <android.support.v7.widget.Toolbar
            android:id="@+id/search_shouts_results_toolbar"
            style="@style/AppTheme.BaseToolbarStyle"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/search_shouts_results_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/search_shouts_results_toolbar"
            android:background="@color/default_bg_color" />

        <include layout="@layout/base_progress" />

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/filter_drawer"
        android:layout_width="304dp"
        android:layout_height="match_parent"
        android:layout_gravity="end|right">

        <fragment
            android:id="@+id/search_filter_fragment"
            android:layout_width="304dp"
            android:layout_height="match_parent"
            android:name="com.shoutit.app.android.view.filter.FiltersFragment"/>

    </FrameLayout>


</android.support.v4.widget.DrawerLayout>