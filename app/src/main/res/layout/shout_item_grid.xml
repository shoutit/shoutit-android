<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@android:color/white"
                                    android:foreground="?selectableItemBackground"
                                    card_view:cardCornerRadius="2dp"
                                    card_view:cardElevation="2dp"
                                    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:id="@+id/shout_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:layout_width="200dp">

        <FrameLayout android:layout_width="match_parent"
                     android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/shout_grid_image_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/home_feed_image_height"
                android:scaleType="centerCrop"
                android:src="@drawable/pattern_placeholder"
                tools:background="@android:color/black"/>

            <TextView
                android:id="@+id/shout_promoted_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="2dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="2dp"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:visibility="gone"
                tools:background="@android:color/holo_red_dark"
                tools:text="TOP PREMIUM"
                tools:visibility="visible"/>

        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:paddingBottom="5dp"
            android:paddingEnd="9dp"
            android:paddingLeft="8dp"
            android:paddingRight="9dp"
            android:paddingStart="8dp"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/shout_grid_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#8a000000"
                android:textSize="12sp"
                tools:text="Merino Wool Can Go till he dafdsfdsfdsfdsfdsff"/>

            <TextView
                android:id="@+id/home_feed_card_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/shout_grid_title_tv"
                android:layout_centerVertical="true"
                android:layout_marginEnd="1dp"
                android:layout_marginRight="1dp"
                android:layout_toLeftOf="@+id/shout_grid_price_tv"
                android:layout_toStartOf="@+id/shout_grid_price_tv"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#61000000"
                android:textSize="12sp"
                tools:text="John Smith dfdsfsadfadsfdsafdsafsdafdasfadsfdas"/>

            <TextView
                android:id="@+id/shout_grid_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/shout_grid_title_tv"
                android:layout_centerVertical="true"
                android:maxLines="1"
                android:textColor="#4caf50"
                android:textSize="12sp"
                tools:text="$44ewe USD"/>

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>