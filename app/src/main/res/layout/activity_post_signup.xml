<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/signups_toolbar_container"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize">

        <android.support.v7.widget.Toolbar
            android:id="@+id/signups_toolbar"
            android:layout_width="match_parent"
            style="@style/WhiteLogoToolbar"
            android:elevation="0dp"
            android:layout_height="?actionBarSize" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ab_logo" />

        <TextView
            android:id="@+id/post_signup_next_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="?selectableItemBackground"
            android:textAllCaps="true"
            android:gravity="center"
            android:textSize="14sp"
            android:paddingRight="16dp"
            android:paddingEnd="16dp"
            android:paddingLeft="6dp"
            android:paddingStart="6dp"
            android:textColor="@color/post_signup_next_disabled"
            android:enabled="false"
            android:fontFamily="sans-serif-meidum"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="@string/post_signup_next"/>

        <TextView
            android:id="@+id/post_signup_done_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="?selectableItemBackground"
            android:textAllCaps="true"
            android:gravity="center"
            android:textSize="14sp"
            android:paddingRight="16dp"
            android:paddingEnd="16dp"
            android:paddingLeft="6dp"
            android:paddingStart="6dp"
            android:textColor="@color/post_signup_next_disabled"
            android:enabled="false"
            android:fontFamily="sans-serif-meidum"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:text="@string/post_signup_done"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="#602a2a2a"/>

    </RelativeLayout>
    
    <TextView
        android:id="@+id/post_signup_header"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_below="@+id/signups_toolbar_container"
        android:textSize="18sp"
        android:textColor="@color/textBlackPrimary"
        android:gravity="center"
        android:text="@string/post_signup_iterests_header"/>

    <FrameLayout
        android:id="@+id/post_signup_container"
        android:layout_width="match_parent"
        android:layout_below="@+id/post_signup_header"
        android:layout_height="match_parent"/>

    <include layout="@layout/shadow_line"
        android:id="@+id/post_signup_shadow_line"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_below="@+id/post_signup_header"/>

</RelativeLayout>