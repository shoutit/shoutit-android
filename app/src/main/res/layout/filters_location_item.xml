<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="6dp">

    <TextView
        style="@style/FiltersHeader"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:text="@string/filters_location_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="6dp"
        android:layout_marginRight="6dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/filters_flag_iv"
            android:layout_width="18dp"
            android:layout_height="18dp"
            tools:src="@drawable/pl" />

        <TextView
            android:id="@+id/filters_location_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="1dp"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="1dp"
            android:layout_marginStart="36dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="start|left"
            android:singleLine="true"
            android:textColor="@color/black_87"
            android:textSize="14sp"
            tools:text="Dubai, United Arab" />

        <TextView
            android:id="@+id/filters_change_location_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackground"
            android:fontFamily="sans-serif-medium"
            android:maxLines="1"
            android:padding="4dp"
            android:text="@string/edit_profile_location_change"
            android:textAllCaps="true"
            android:textColor="@color/accent_blue"
            android:textSize="12sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/black_12"/>

</LinearLayout>