<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:background="@android:color/white"
             android:padding="4dp">

    <FrameLayout android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="@dimen/chat_sent_msg_item_margin_left"
                 android:layout_marginStart="@dimen/chat_sent_msg_item_margin_left">

        <ImageView
            android:id="@+id/chats_sent_video_imageview"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:scaleType="centerCrop"
            tools:src="@drawable/ca"/>

        <View
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:background="@color/black_38"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/chats_video_play"/>

    </FrameLayout>

    <TextView
        android:id="@+id/chats_sent_video_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:background="@drawable/chat_time_gradient"
        android:textColor="@android:color/white"
        tools:text="18:04"/>

</FrameLayout>