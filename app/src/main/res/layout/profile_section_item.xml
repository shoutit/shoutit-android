<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profile_section_container"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@drawable/white_selector"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/profile_section_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="20dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="20dp"
        android:layout_marginStart="12dp"
        android:scaleType="centerCrop"
        tools:src="@drawable/default_profile" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/profile_section_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/profile_section_name"
            android:textSize="16sp"
            tools:text="Carl Smith kjdsfhdskjhfdskjfhsdkjfhdskjfhdskjfhdskjfhdskjfhdskjfhdskjfhdskfj" />

        <TextView
            android:id="@+id/profile_section_listeners_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/black_54"
            android:textSize="12sp"
            tools:text="20k Listeners" />

    </LinearLayout>

    <ImageView
        android:id="@+id/profile_section_listening_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:padding="8dp"
        android:src="@drawable/ic_listening_off" />

</LinearLayout>