<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".view.media.NativeCameraActivity">

    <FrameLayout
        android:id="@+id/camera_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/camera_capture_controlls"
        tools:background="@color/black_87"/>

    <ImageView
        android:id="@+id/camera_preview_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/camera_capture_controlls"
        android:scaleType="centerCrop"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/camera_preview_controlls"
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/black"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:visiility="visible">

        <Button
            android:id="@+id/camera_preview_controlls_retake"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="40dp"
            android:layout_marginRight="40dp"
            android:background="?selectableItemBackground"
            android:fontFamily="sans-serif"
            android:text="Retake"
            android:textAllCaps="true"
            android:textColor="@android:color/darker_gray"/>

        <Button
            android:id="@+id/camera_preview_controlls_publish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp"
            android:background="?selectableItemBackground"
            android:fontFamily="sans-serif"
            android:text="Publish"
            android:textAllCaps="true"
            android:textColor="@android:color/white"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/camera_capture_controlls"
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/black"
        android:visibility="visible">

        <TextView
            android:id="@+id/camera_text_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="What are you offering?"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/camera_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/camera_text_header"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="6dp"
            android:text="This is your featured photo. Make sure it's a good one!"
            android:textColor="@android:color/white"
            android:textSize="12sp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <ImageButton
                android:id="@+id/button_capture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="bottom"
                android:layout_margin="10dp"
                android:background="?selectableItemBackground"
                android:src="@drawable/camera_capture"/>

            <ImageButton
                android:id="@+id/button_gallery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="bottom"
                android:layout_marginEnd="40dp"
                android:layout_marginRight="40dp"
                android:layout_toLeftOf="@+id/button_capture"
                android:layout_toStartOf="@+id/button_capture"
                android:background="?selectableItemBackground"
                android:src="@drawable/gallery"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="bottom"
                android:layout_marginLeft="40dp"
                android:layout_marginStart="40dp"
                android:layout_toEndOf="@+id/button_capture"
                android:layout_toRightOf="@+id/button_capture"
                android:background="?selectableItemBackground"
                android:src="@drawable/video_mode"/>

        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/camera_camera_controlls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/status_bar_margin">

        <CheckBox
            android:id="@+id/camera_rotate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:button="@drawable/camera_switch_button"
            android:checked="false"/>

        <com.shoutit.app.android.widget.FlashlightButton
            android:id="@+id/camera_flashlight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:background="?selectableItemBackground"
            tools:src="@drawable/flash"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/camera_published_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_87"
        android:clickable="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="70dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/camera_cool_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_logo"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Shout published. Congrats!"
            android:textColor="@android:color/white"
            android:textSize="22sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Want to add price?"
            android:textAllCaps="true"
            android:textColor="@android:color/white"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/camera_published_price"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:hint="Negotiable"
                android:inputType="numberDecimal"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"/>

            <Spinner
                android:id="@+id/camera_published_currency"
                android:layout_width="120dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <Button
            style="@style/BaseButtonDefaultBackgroundStyle"
            android:id="@+id/camera_published_done"
            android:layout_width="240dp"
            android:layout_marginTop="10dp"
            android:text="Done"
            android:textColor="@android:color/white"/>


    </LinearLayout>

    <ImageButton
        android:id="@+id/camera_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="@dimen/status_bar_margin"
        android:background="?selectableItemBackground"
        android:src="@drawable/close"/>

    <FrameLayout
        android:id="@+id/camera_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_20"
        android:clickable="true"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

    </FrameLayout>

</RelativeLayout>