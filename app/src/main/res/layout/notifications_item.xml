<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/notifications_root_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="72dp"
    android:background="@drawable/white_selector"
    android:orientation="horizontal"
    android:paddingBottom="12dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="12dp">

    <ImageView
        android:id="@+id/notifications_avatar_iv"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_rect_avatar_placeholder" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="2dp">

        <TextView
            android:id="@+id/notifications_user_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            tools:text="Jiff"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:textColor="@color/black_87"/>

        <TextView
            android:id="@+id/notifications_text_tv"
            android:layout_toRightOf="@+id/notifications_user_tv"
            android:layout_toEndOf="@+id/notifications_user_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black_54"
            android:textSize="14sp"
            android:maxLines="3"
            android:ellipsize="end"
            tools:text="started listetning to dnbfvssdf" />

        <TextView
            android:id="@+id/notifications_time_ago_tv"
            android:layout_below="@+id/notifications_text_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_clock"
            android:drawablePadding="4dp"
            android:drawableStart="@drawable/ic_clock"
            android:gravity="center_vertical"
            android:textColor="@color/black_38"
            android:textSize="12sp"
            android:paddingBottom="2dp"
            android:layout_marginTop="10dp"
            tools:text="21 hours ago" />

    </RelativeLayout>

</LinearLayout>