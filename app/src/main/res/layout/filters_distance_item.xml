<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/filters_distance_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/filters_search_within"
        android:textColor="@color/black_54"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/filters_distance_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/filters_distance_header"
        android:layout_toRightOf="@+id/filters_distance_header"
        android:text="@string/filters_search_init_distance"
        android:textColor="@color/black_87"
        android:textSize="14sp" />

    <SeekBar
        android:id="@+id/filters_distance_seekbar"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/filters_distance_tv"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:paddingLeft="14dp"
        android:paddingStart="14dp"
        android:paddingRight="8dp"
        android:paddingEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:progress="50"
        android:max="100"
        android:theme="@style/BlueSeekBar" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/filters_distance_seekbar"
        android:background="@color/black_12" />

</RelativeLayout>