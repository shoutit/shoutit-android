<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/activity_intro_pager_height"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center_horizontal"
    tools:background="@drawable/gradient_intro"
    tools:context=".view.intro.IntroActivity"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/activity_intro_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/status_bar_margin"
        android:layout_marginTop="58dp"
        tools:src="@drawable/ic_logo" />

    <TextView
        android:id="@+id/activity_intro_first_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:fontFamily="sans-serif-medium"
        tools:text="@string/intro_welcome"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/activity_intro_second_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:gravity="center"
        tools:text="@string/intro_buy"
        android:textColor="@color/intro_buy"
        android:textSize="16sp" />

</LinearLayout>