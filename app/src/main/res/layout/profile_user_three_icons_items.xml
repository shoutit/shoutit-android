<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/white"
    android:orientation="horizontal"
    android:paddingTop="16dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/profile_first_icon_value_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_listeners"
            android:drawablePadding="6dp"
            android:drawableStart="@drawable/ic_listeners"
            android:gravity="center"
            android:textColor="@color/black_54"
            android:textSize="14sp"
            tools:text="3K" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="@string/profile_listeners_label"
            android:textColor="@color/black_54"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/profile_chat_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/profile_second_icon_text_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:maxLines="1"
            android:drawableTop="@drawable/ic_chat_gray"
            android:ellipsize="end"
            android:gravity="center"
            android:text="@string/profile_chat_label"
            android:textColor="@color/black_54"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/profile_listen_action_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/profile_listen_icon_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_listening_off"
            android:gravity="center"
            android:textColor="@color/black_54"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/profile_listen_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:text="@string/profile_listen_label"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/black_54"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>