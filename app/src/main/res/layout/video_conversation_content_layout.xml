<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:showIn="@layout/activity_video_conversation">

    <FrameLayout
        android:id="@+id/video_conversation_content_participant_window"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true" />

    <ImageView
        android:id="@+id/video_conversation_participant_window_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/img_pattern"
        android:background="@color/default_bg_color"
        android:visibility="gone"
        android:scaleType="centerCrop"/>

    <FrameLayout
        android:id="@+id/video_conversation_local_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>
