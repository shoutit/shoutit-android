<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profile_section_container"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@android:color/white"
    android:gravity="center_vertical">

    <LinearLayout
        android:id="@+id/search_profile_results_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/white_selector"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/profile_section_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            tools:src="@drawable/default_profile_circle" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/profile_section_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/textBlackPrimary"
                android:textSize="16sp"
                tools:text="Carl Smith dsjfmdsbfmhdsbfsdmbfdsmfbdsmfbsdmfbsdmfbdsfmbsdf" />

            <TextView
                android:id="@+id/profile_section_listeners_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/textBlackSecondary"
                android:textSize="14sp"
                tools:text="20k Listeners" />

        </LinearLayout>

        <include
            layout="@layout/button_listen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentTop="true"
        android:background="@color/base_divider" />

</RelativeLayout>