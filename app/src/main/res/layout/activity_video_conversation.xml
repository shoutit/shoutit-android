<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/video_conversation_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.shoutit.app.android.view.videoconversation.VideoConversationActivity">

    <include layout="@layout/video_conversation_content_layout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="30dp"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <Button
            android:id="@+id/video_conversation_button_call"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:background="@drawable/shape_call_button"
            android:drawableLeft="@drawable/ic_call"
            android:drawableStart="@drawable/ic_call"
            android:layout_marginBottom="15dp"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:text="@string/video_calls_button_call"/>

        <ImageButton
            android:id="@+id/video_conversation_button_dismiss_call"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_call"
            android:background="@drawable/shape_dismiss_call_button"/>

    </LinearLayout>

</RelativeLayout>
