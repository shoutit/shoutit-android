<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/chats_toolbar"
        style="@style/AppTheme.BaseToolbarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/chats_send_layout"
        android:layout_below="@+id/chats_toolbar"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/chats_shout_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/chats_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/chats_send_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/chats_message_edittext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"/>

        <ImageButton
            android:id="@+id/chats_message_send_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:background="?selectableItemBackground"
            android:src="@drawable/send"/>

    </LinearLayout>

    <FrameLayout
        android:background="@android:color/white"
        android:id="@+id/chats_attatchments_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chats_toolbar"
        android:visibility="gone">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:columnCount="2"
            android:rowCount="2">

            <LinearLayout
                android:layout_margin="20dp"
                android:id="@+id/chats_attatchments_photo"
                android:orientation="vertical">

                <ImageButton
                    android:background="?selectableItemBackground"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/photo_attachment"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/chats_attatchments_photo"/>
            </LinearLayout>

            <LinearLayout
                android:layout_margin="20dp"
                android:id="@+id/chats_attatchments_video"
                android:orientation="vertical">

                <ImageButton
                    android:background="?selectableItemBackground"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/video_attachment"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/chats_attatchments_video"/>
            </LinearLayout>

            <LinearLayout
                android:layout_margin="20dp"
                android:id="@+id/chats_attatchments_shout"
                android:orientation="vertical">

                <ImageButton
                    android:background="?selectableItemBackground"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/shout"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/chats_attatchments_shout"/>
            </LinearLayout>

            <LinearLayout
                android:layout_margin="20dp"
                android:id="@+id/chats_attatchments_location"
                android:orientation="vertical">

                <ImageButton
                    android:background="?selectableItemBackground"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/location_attachment"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/chats_attatchments_location"/>
            </LinearLayout>

        </GridLayout>

    </FrameLayout>

    <ProgressBar
        android:id="@+id/chats_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

</RelativeLayout>