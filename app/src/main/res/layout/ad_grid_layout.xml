<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ad_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:foreground="?selectableItemBackground"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="2dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:id="@+id/shout_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:layout_width="200dp">

        <com.facebook.ads.MediaView
            android:id="@+id/ad_media_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/home_feed_image_height" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:paddingBottom="5dp"
            android:paddingEnd="9dp"
            android:paddingLeft="8dp"
            android:paddingRight="9dp"
            android:paddingStart="8dp"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/ad_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#8a000000"
                android:textSize="12sp"
                tools:text="Merino Wool Can Go till he dafdsfdsfdsfdsfdsff" />

            <TextView
                android:id="@+id/ad_sponsored_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/ad_title_tv"
                android:layout_centerVertical="true"
                android:layout_marginEnd="1dp"
                android:layout_marginRight="1dp"
                android:layout_toLeftOf="@+id/ad_action_view"
                android:layout_toStartOf="@+id/ad_action_view"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#61000000"
                android:textSize="12sp"
                android:text="@string/ad_sponsored" />

            <TextView
                android:id="@+id/ad_action_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/ad_title_tv"
                android:layout_centerVertical="true"
                android:maxLines="1"
                android:textColor="#4caf50"
                android:textSize="12sp"
                tools:text="Install Now ffffffffffffffff" />

        </RelativeLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/ad_adchoice_container"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginRight="6dp"
        android:layout_marginEnd="6dp"
        android:layout_gravity="right|end"/>

</android.support.v7.widget.CardView>