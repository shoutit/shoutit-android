<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minHeight="72dp"
    android:paddingTop="6dp">

    <ImageView
        android:id="@+id/conversation_shout_item_image"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_below="@+id/conversation_shout_item_time"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        tools:src="@drawable/ca" />

    <LinearLayout
        android:id="@+id/conversations_texts_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="14dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="14dp"
        android:layout_marginStart="15dp"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_below="@+id/conversation_shout_item_time"
        android:layout_toEndOf="@+id/conversation_shout_item_image"
        android:layout_toRightOf="@+id/conversation_shout_item_image"
        android:orientation="vertical">

        <TextView
            android:id="@+id/conversation_shout_item_shout_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:fontFamily="@string/font_roboto_medium"
            android:gravity="top"
            android:singleLine="true"
            android:textAlignment="gravity"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/accent_blue"
            android:textSize="16sp"
            tools:text="sample Shout Title Which is quite Long" />

        <TextView
            android:id="@+id/conversation_shout_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:ellipsize="end"
            android:fontFamily="@string/font_roboto_regular"
            android:gravity="top"
            android:lines="1"
            android:maxLines="1"
            android:textAlignment="gravity"
            android:textColor="@color/black_87"
            android:textSize="14sp"
            tools:text="phillip Jenkins dsjfdns,jfnds,fnsd dsjfdsjkfsd dsfdsfsd  dsjfhsdf" />

        <TextView
            android:id="@+id/conversation_shout_item_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@string/font_roboto_regular"
            android:gravity="top"
            android:lines="1"
            android:textAlignment="gravity"
            android:textColor="@color/black_54"
            android:textSize="14sp"
            android:visibility="visible"
            tools:text="this is a sample message. sdfdsfdsf dsfhsdjf sdhfs dfsdh fgsdhfgsdhjfgdsf" />

    </LinearLayout>

    <TextView
        android:id="@+id/conversation_shout_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:textSize="12sp"
        tools:text="21 hours" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="78dp"
        android:layout_marginStart="78dp"
        android:background="@color/black_12" />

</RelativeLayout>