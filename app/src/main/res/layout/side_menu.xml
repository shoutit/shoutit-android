<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/menu_bg"
    android:layout_gravity="left|start"
    android:overScrollMode="never"
    android:fitsSystemWindows="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/side_menu_header" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingEnd="10dp"
            android:paddingRight="10dp"
            android:paddingLeft="18dp"
            android:paddingStart="18dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ad"
                android:drawablePadding="32dp"
                android:drawableStart="@drawable/ad"
                android:textColor="@color/black_87"
                android:textSize="16sp"
                tools:text="Dubai" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="@string/menu_change_location"
                android:textAllCaps="true"
                android:padding="6dp"
                android:background="?selectableItemBackgroundBorderless"
                android:textColor="@color/menu_change"
                android:textSize="12sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/black_12"/>

        <CheckedTextView
            android:id="@+id/menu_home"
            style="@style/SideMenuItem"
            android:drawableStart="@drawable/ic_menu_home"
            android:text="@string/menu_item_home" />

        <CheckedTextView
            android:id="@+id/menu_discover"
            style="@style/SideMenuItem"
            android:drawableStart="@drawable/ic_menu_discover"
            android:text="@string/menu_item_discover" />

        <CheckedTextView
            android:id="@+id/menu_browse"
            style="@style/SideMenuItem"
            android:drawableStart="@drawable/ic_menu_browse"
            android:text="@string/menu_item_browse" />

        <CheckedTextView
            android:id="@+id/menu_chat"
            style="@style/SideMenuItem"
            android:drawableStart="@drawable/ic_menu_chat"
            android:text="@string/menu_item_home" />

        <CheckedTextView
            android:id="@+id/menu_orders"
            style="@style/SideMenuItem"
            android:drawableStart="@drawable/ic_menu_orders"
            android:text="@string/menu_item_orders" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/black_12"/>

        <CheckedTextView
            android:id="@+id/menu_settings"
            style="@style/SideMenuItem"
            android:text="@string/menu_item_settings" />

        <CheckedTextView
            android:id="@+id/menu_help"
            style="@style/SideMenuItem"
            android:text="@string/menu_item_help" />

        <CheckedTextView
            android:id="@+id/menu_invite_frirends"
            style="@style/SideMenuItem"
            android:text="@string/menu_item_invite_friends" />

    </LinearLayout>


</ScrollView>