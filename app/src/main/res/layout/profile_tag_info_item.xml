<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:paddingLeft="80dp"
        android:paddingStart="80dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/profile_user_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingTop="6dp"
                android:textColor="@color/profile_name"
                android:textSize="16sp"
                tools:text="Doris lalalalalsfkakakakakakakakakakakkakakaka" />

            <ImageView
                android:id="@+id/profile_menu_more_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="6dp"
                android:background="?selectableItemBackground"
                android:paddingBottom="2dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingTop="2dp"
                android:src="@drawable/ic_more" />

        </LinearLayout>

        <TextView
            android:id="@+id/profile_user_nick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_54"
            android:textSize="12sp"
            tools:text="Doris90" />

    </LinearLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingBottom="6dp"
        android:paddingTop="16dp">

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/profile_tag_icon_tv"
            android:layout_toStartOf="@+id/profile_tag_icon_tv"
            android:background="?selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/profile_first_icon_value_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_listeners"
                android:drawablePadding="6dp"
                android:drawableStart="@drawable/ic_listeners"
                android:gravity="center"
                android:textColor="@color/black_54"
                android:textSize="14sp"
                tools:text="3K" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="@string/profile_listeners_label"
                android:textColor="@color/black_54"
                android:textSize="14sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/profile_tag_icon_tv"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="2dp"
            android:background="?selectableItemBackground"
            android:drawableTop="@drawable/ic_chat_gray"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/black_54"
            android:textSize="14sp"
            android:text="Computers" />

        <LinearLayout
            android:id="@+id/profile_listen_action_container"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/profile_tag_icon_tv"
            android:layout_toRightOf="@+id/profile_tag_icon_tv"
            android:background="?selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/profile_listen_icon_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:src="@drawable/ic_listening_off"
                android:textColor="@color/black_54"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/profile_listen_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:maxLines="1"
                android:text="@string/profile_listen_label"
                android:textColor="@color/black_54"
                android:textSize="14sp"
                tools:text="Stio Listening lol" />

        </LinearLayout>

    </RelativeLayout>

    <View android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@drawable/toolbar_drop_shadow"/>

</LinearLayout>