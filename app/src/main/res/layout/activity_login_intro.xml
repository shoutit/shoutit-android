<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:id="@+id/activity_login_root_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?actionBarSize"
        android:background="@color/pattern_background"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/activity_login_join"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:text="@string/login_intro_join"
                android:textColor="@color/black_54"
                android:textSize="24sp"/>

            <TextView
                android:id="@+id/activity_login_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="54dp"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:lineSpacingExtra="4dp"
                android:text="@string/login_intro_text"
                android:textColor="@color/black_54"
                android:textSize="14sp"/>

            <Button
                style="@style/BaseButtonDefaultBackgroundStyle"
                android:id="@+id/activity_login_facebook_btn"
                android:layout_width="280dp"
                android:layout_marginBottom="8dp"
                android:drawableLeft="@drawable/ic_facebook"
                android:drawableStart="@drawable/ic_facebook"
                android:paddingLeft="22dp"
                android:paddingStart="22dp"
                android:text="@string/login_intro_facebook"
                android:textColor="@android:color/white"
                android:theme="@style/FacebookButton"/>

            <Button
                style="@style/BaseButtonDefaultBackgroundStyle"
                android:id="@+id/activity_login_gplus_btn"
                android:layout_width="280dp"
                android:layout_marginBottom="8dp"
                android:drawableLeft="@drawable/ic_gplus"
                android:drawableStart="@drawable/ic_gplus"
                android:paddingLeft="22dp"
                android:paddingStart="22dp"
                android:text="@string/login_intro_google"
                android:textColor="@android:color/white"
                android:theme="@style/GoogleButton"/>

            <Button
                style="@style/BaseButtonDefaultBackgroundStyle"
                android:id="@+id/activity_login_signup"
                android:layout_width="280dp"
                android:text="@string/login_intro_signup"
                android:textColor="@android:color/white"
                android:theme="@style/LoginButton"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <include layout="@layout/login_bottom_actions"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </ScrollView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/activity_login_toolbar"
        android:layout_centerHorizontal="true"
        android:alpha="1"
        android:scaleType="centerCrop"
        android:src="@drawable/img_pattern"/>

    <android.support.v7.widget.Toolbar
        android:id="@+id/activity_login_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:navigationIcon="@drawable/ic_blue_arrow"
        android:theme="@style/WhiteToolbar"
        android:title="">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_shoutit_logo"/>

    </android.support.v7.widget.Toolbar>

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_below="@id/activity_login_toolbar"
        android:background="@drawable/toolbar_drop_shadow"/>

    <FrameLayout
        android:id="@+id/activity_login_progress_layout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_54">

        <ProgressBar
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </FrameLayout>

</RelativeLayout>