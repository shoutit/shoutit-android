<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_bg_color"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/promoted_toolbar"
        style="@style/AppTheme.BaseToolbarStyle"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize" />

    <TextView
        android:id="@+id/promoted_shout_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="16dp"
        android:background="@color/default_bg_color"
        android:ellipsize="end"
        android:fontFamily="sans-serif-medium"
        android:maxLines="1"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:textColor="@color/black_54"
        android:textSize="14sp"
        tools:text="Shout Title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="22dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <View
            android:id="@+id/promoted_label_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:background="#26ffd700" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_promote_stroke" />

        <TextView
            android:id="@+id/promoted_label_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/promoted_label_badge_tv"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="3"
            android:paddingBottom="4dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/promote_text"
            tools:text="Your shout will be highlighted in all searches. dfsdf sd dsfdsfds sdfdsf ds dsfdsfdsfdsf dsfdsf dsfdsfdsfdsf sdfdsf dfsdfdsf dsfsdfsdfdsfdsf dsfsdfdsfdsfdsfsfdsf" />

        <TextView
            android:id="@+id/promoted_label_badge_tv"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:background="@drawable/shape_yellow_promote_badge"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:minWidth="120dp"
            android:paddingBottom="3dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="3dp"
            android:text="Premium"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/promoted_days_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/promoted_label_badge_tv"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/promoted_label_badge_tv"
            android:layout_toRightOf="@+id/promoted_label_badge_tv"
            android:textColor="@color/promote_text"
            android:textSize="14sp"
            tools:text="3 Days" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="14dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="26dp"
        android:background="@android:color/white"
        android:elevation="3dp"
        android:orientation="horizontal"
        android:paddingBottom="2dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="2dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_credits"
            android:drawablePadding="16dp"
            android:drawableStart="@drawable/ic_credits"
            android:gravity="center_vertical"
            android:text="@string/promote_available_credits"
            android:textColor="@color/black_87"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/promoted_available_credits_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            tools:text="100" />

    </LinearLayout>

</LinearLayout>