<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    card_view:cardElevation="2dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="2dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/shout_user_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="4dp"
            android:paddingEnd="8dp"
            android:paddingLeft="4dp"
            android:paddingRight="8dp"
            android:paddingStart="4dp"
            android:paddingTop="4dp">

            <ImageView
                android:id="@+id/shout_avatar_iv"
                android:layout_width="@dimen/shout_avatar_size"
                android:layout_height="@dimen/shout_avatar_size"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_avatar_placeholder" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/shout_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/shout_name"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textSize="16sp"
                    tools:text="John Smith" />

                <TextView
                    android:id="@+id/shout_user_location_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/black_54"
                    android:textSize="12sp"
                    tools:text="Dubai, UAE" />

            </LinearLayout>

            <TextView
                android:id="@+id/shout_type_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/shape_home_offer_label"
                android:gravity="top|center_horizontal"
                android:paddingBottom="4dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="2dp"
                android:textColor="@color/black_54"
                android:textSize="12sp"
                tools:text="Offer" />

        </LinearLayout>

        <FrameLayout
            android:id="@+id/shout_pager_container"
            android:layout_below="@+id/shout_user_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <android.support.v4.view.ViewPager
                android:id="@+id/shout_view_pager"
                android:layout_width="match_parent"
                android:layout_height="258dp"/>

            <com.viewpagerindicator.CirclePageIndicator
                android:id="@+id/activity_intro_page_indicators"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:background="@android:color/black"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="20dp"
                app:fillColor="@android:color/white"
                app:pageColor="@color/shout_page_indicator"/>

        </FrameLayout>

        <TextView
            android:id="@+id/shouts_title_tv"
            android:layout_below="@+id/shout_pager_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"
            android:textColor="@color/black_87"
            tools:text="Merino Wool Slouchy Hat, Winter Hat, Chunky Textured Knit Hat, Oxblood Chunky Hat"/>

        <TextView
            android:id="@+id/shouts_price_tv"
            android:layout_below="@+id/shouts_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:textColor="@color/colorAccent"
            tools:text="$44 USD"/>

        <TextView
            android:id="@+id/shout_available_tv"
            android:layout_below="@+id/shouts_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            tools:text="Only 3 available"/>

        <LinearLayout
            android:id="@+id/shout_add_to_cart_btn"
            android:layout_below="@+id/shouts_price_tv"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/selector_cart_button">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="7dp"
                android:layout_marginEnd="7dp"
                android:src="@drawable/ic_ab_cart"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/shout_add_to_cart"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:fontFamily="sans-serif-medium"
                />

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>