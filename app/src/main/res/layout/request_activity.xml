<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:background="@android:color/white">

        <android.support.v7.widget.Toolbar
            android:id="@+id/request_activity_toolbar"
            style="@style/AppTheme.BaseToolbarStyle"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"/>

        <EditText
            android:layout_margin="6dp"
            android:id="@+id/create_request_descirption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/request_activity_what_are_you_looking_for"/>

        <LinearLayout
            android:layout_margin="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/create_request_budget"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.65"
                android:inputType="numberDecimal"
                android:hint="@string/request_activity_budget"/>

            <Spinner
                android:id="@+id/create_request_spinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.35"/>

        </LinearLayout>

        <TextView
            android:layout_margin="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/request_activity_when"/>

        <LinearLayout
            android:layout_margin="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@android:color/black"
                android:text="now"
                android:textAllCaps="true"/>

            <SeekBar
                android:id="@+id/create_request_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <TextView
            android:layout_margin="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/request_activity_where"/>

        <LinearLayout
            android:layout_margin="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/create_request_location"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.75"
                android:gravity="center_vertical"
                android:textColor="@android:color/black"
                android:paddingLeft="10dp"
                android:drawablePadding="10dp"
                tools:drawableLeft="@drawable/ec"
                tools:text="Dubai, United Arab Emirates"/>

            <Button
                android:id="@+id/create_request_location_btn"
                android:background="?selectableItemBackground"
                android:textColor="@color/accent_blue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:text="@string/request_activity_change_location"/>

        </LinearLayout>

        <Button
            android:layout_margin="6dp"
            android:id="@+id/create_request_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/request_activity_btn"
            android:textColor="@android:color/white"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/create_request_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_20"
        android:clickable="true"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

    </FrameLayout>

</FrameLayout>