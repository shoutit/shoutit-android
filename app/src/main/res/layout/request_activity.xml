<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:background="@android:color/white">

        <android.support.v7.widget.Toolbar
            android:id="@+id/request_activity_toolbar"
            style="@style/AppTheme.BaseToolbarStyle"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:layout_marginBottom="10dp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/request_activity_description_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    app:hintTextAppearance="@style/BlueInputStyle">

                    <EditText
                        android:singleLine="true"
                        android:id="@+id/create_request_descirption"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="-4dp"
                        android:hint="@string/request_activity_what_are_you_looking_for"
                        android:theme="@style/BlueEditText" />

                </android.support.design.widget.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:hintTextAppearance="@style/BlueInputStyle">

                        <EditText
                            android:id="@+id/create_request_budget"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="-4dp"
                            android:hint="@string/request_activity_budget"
                            android:inputType="numberDecimal"
                            android:theme="@style/BlueEditText" />
                    </android.support.design.widget.TextInputLayout>

                    <ImageView
                        android:id="@+id/create_request_currency_info"
                        android:layout_width="24dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:src="@drawable/info" />

                    <com.shoutit.app.android.widget.StateSpinner
                        android:layout_gravity="bottom"
                        android:id="@+id/create_request_spinner"
                        android:layout_width="130dp"
                        android:layout_height="43dp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@android:color/darker_gray" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/request_activity_where"
                    android:textColor="#8a000000"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/create_request_location"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.75"
                        android:drawablePadding="16dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="6dp"
                        android:paddingStart="6dp"
                        android:textColor="@android:color/black"
                        tools:drawableLeft="@drawable/ec"
                        tools:text="Dubai, United Arab Emirates" />

                    <Button
                        android:id="@+id/create_request_location_btn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:background="?selectableItemBackground"
                        android:text="@string/request_activity_change_location"
                        android:textColor="@color/accent_blue"
                        android:textSize="12sp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginBottom="10dp"
                    android:background="@android:color/darker_gray" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="4dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/request_activity_sharing"
                        android:textAllCaps="true"
                        android:textColor="#8a000000"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/create_request_credits_info_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:paddingBottom="4dp"
                        android:paddingTop="4dp"
                        android:src="@drawable/credits_info"/>

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="18dp"
                    android:orientation="horizontal">

                    <android.support.v7.widget.AppCompatCheckBox
                        android:id="@+id/request_activity_facebook_checkbox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_weight="1"
                        android:paddingLeft="14dp"
                        android:paddingStart="14dp"
                        android:text="@string/request_activity_facebook"
                        android:textColor="@color/black_54"
                        android:textSize="16sp"
                        android:theme="@style/BlueCheckBoxOnChecked"
                        tools:checked="true" />

                    <android.support.v7.widget.AppCompatCheckBox
                        android:id="@+id/request_activity_twitter_checkbox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_weight="1"
                        android:paddingLeft="14dp"
                        android:paddingStart="14dp"
                        android:text="@string/request_activity_twitter"
                        android:textColor="@color/black_54"
                        android:textSize="16sp"
                        android:visibility="invisible"
                        android:theme="@style/BlueCheckBoxOnChecked" />

                </LinearLayout>

                <Button
                    android:id="@+id/create_request_confirm"
                    style="@style/BaseButtonStyle"
                    android:layout_width="match_parent"
                    android:background="@drawable/selector_green_button_with_stroke"
                    android:text="@string/request_activity_btn"
                    android:textColor="@android:color/white" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/create_request_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_20"
        android:clickable="true"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

    </FrameLayout>

</FrameLayout>