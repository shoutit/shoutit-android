<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.TabLayout
        android:id="@+id/conversations_pager_tablayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:tabIndicatorColor="@android:color/white"
        app:tabMaxWidth="0dp"
        app:tabMode="fixed"
        app:tabGravity="fill"
        app:tabSelectedTextColor="@android:color/white"
        app:tabTextColor="@color/green_tab_text_color" />

    <android.support.v4.view.ViewPager
        android:id="@+id/conversations_pager_view_pager"
        android:layout_below="@+id/conversations_pager_tablayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <include layout="@layout/shadow_item"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@+id/conversations_pager_tablayout"/>

</RelativeLayout>