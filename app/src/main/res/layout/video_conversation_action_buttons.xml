<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/video_conversation_action_buttons_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="30dp"
    android:layout_marginTop="25dp"
    android:layout_marginRight="16dp"
    android:layout_marginLeft="16dp"
    android:gravity="center_horizontal"
    android:orientation="horizontal">

    <com.shoutit.app.android.widget.CheckableImageButton
        android:id="@+id/video_conversation_button_show_preview_btn"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="@drawable/shape_video_disabled"
        android:src="@drawable/video_off" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1" />

    <com.shoutit.app.android.widget.CheckableImageButton
        android:id="@+id/video_conversation_button_audio_btn"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="@drawable/shape_video_disabled"
        android:src="@drawable/audio_off" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1" />

    <ImageButton
        android:id="@+id/video_conversation_button_dismiss_call"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="@drawable/selector_dismiss_call_button"
        android:src="@drawable/reject" />

</LinearLayout>