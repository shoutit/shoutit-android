<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginLeft="80dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="6dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/profile_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:drawableEnd="@drawable/ic_verified"
                tools:drawableRight="@drawable/ic_verified"
                android:drawablePadding="6dp"
                android:ellipsize="end"
                android:layout_gravity="center_vertical"
                android:maxLines="1"
                android:textColor="@color/profile_name"
                android:textSize="16sp"
                style="@style/ShoutitRtlTextStyle"
                tools:text="tymek tym sdfsdf" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/profile_notification_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:layout_marginRight="12dp"
                android:background="?selectableItemBackground"
                android:paddingLeft="9dp"
                android:paddingStart="9dp"
                android:paddingRight="6dp"
                android:paddingEnd="6dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:layout_marginTop="6dp"
                android:src="@drawable/ic_notifications" />

            <TextView
                style="@style/RedBadgeStyle"
                android:id="@+id/profile_notification_badge_tv"
                android:layout_marginTop="1dp"
                tools:text="12"
                android:visibility="gone"
                tools:visibility="visible" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/profile_edit_profile_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/profile_edit_profile_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="6dp"
                android:background="?selectableItemBackground"
                android:paddingBottom="2dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingTop="2dp"
                android:src="@drawable/ic_edit" />

            <TextView
                style="@style/OrangeBadgeStyle"
                android:id="@+id/profile_profile_badge_tv"
                android:layout_marginTop="1dp"
                android:visibility="gone"
                android:text="1"
                tools:visibility="visible" />

        </FrameLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/profile_user_nick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="80dp"
        android:paddingStart="80dp"
        android:textColor="@color/black_54"
        android:layout_marginBottom="10dp"
        android:textSize="12sp"
        tools:text="Doris90" />

    <TextView
        android:id="@+id/profile_verification_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|end"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:visibility="invisible"
        tools:visibility="visible"
        tools:text="Request status: Pending"/>

    <TextView
        android:id="@+id/profile_verify_account"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textAllCaps="true"
        android:gravity="center"
        android:background="@drawable/selector_verify_account"
        android:textColor="@color/profile_verify"
        android:fontFamily="sans-serif-medium"
        android:textSize="14sp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:visibility="gone"
        tools:visibility="visible"
        android:text="@string/profile_user_verify_account"/>

</LinearLayout>