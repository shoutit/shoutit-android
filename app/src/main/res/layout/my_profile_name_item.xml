<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="80dp"
        android:paddingStart="80dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/profile_user_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingTop="6dp"
            android:ellipsize="end"
            android:layout_gravity="center_vertical"
            android:maxLines="1"
            android:textColor="@color/profile_name"
            android:textSize="16sp"
            tools:text="Doris lalalalalalallalalalaldfaasdfadsfadsfdasfdasf" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/profile_notification_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:layout_marginRight="12dp"
                android:background="?selectableItemBackground"
                android:paddingLeft="10dp"
                android:paddingStart="10dp"
                android:paddingRight="6dp"
                android:paddingEnd="6dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:layout_marginTop="6dp"
                android:src="@drawable/ic_notifications" />

            <TextView
                android:id="@+id/profile_notification_badge_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="12"
                android:visibility="gone"
                tools:visibility="visible"
                android:fontFamily="sans-serif-medium"
                android:layout_marginTop="2dp"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:background="@drawable/shape_badge"/>

        </FrameLayout>

        <ImageView
            android:id="@+id/profile_edit_profile_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:layout_marginTop="6dp"
            android:background="?selectableItemBackground"
            android:src="@drawable/ic_edit" />

    </LinearLayout>

    <TextView
        android:id="@+id/profile_user_nick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="80dp"
        android:paddingStart="80dp"
        android:textColor="@color/black_54"
        android:textSize="12sp"
        tools:text="Doris90" />

    <TextView
        android:id="@+id/profile_verify_account"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textAllCaps="true"
        android:layout_marginTop="14dp"
        android:gravity="center"
        android:background="@drawable/selector_verify_account"
        android:textColor="@color/profile_verify"
        android:fontFamily="sans-serif-medium"
        android:textSize="14sp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:visibility="gone"
        tools:visibility="visible"
        android:text="@string/profile_verify_account"/>

</LinearLayout>