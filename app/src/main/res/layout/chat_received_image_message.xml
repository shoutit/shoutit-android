<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="6dp"
    android:padding="4dp">

    <ImageView
        android:id="@+id/chats_received_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:scaleType="centerCrop"
        android:visibility="gone"
        tools:src="@drawable/ca"
        tools:visibility="visible" />

    <FrameLayout
        android:layout_marginLeft="@dimen/chat_received_msg_item_margin_left"
        android:layout_marginStart="@dimen/chat_received_msg_item_margin_left"
        android:layout_width="106dp"
        android:layout_height="106dp"
        android:background="@drawable/chat_other_first_bg">

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/cjats_received_image_imageview"
            android:layout_width="90dp"
            android:layout_height="96dp"
            android:paddingTop="6dp"
            android:scaleType="centerCrop"
            tools:src="@drawable/ca" />

        <TextView
            android:id="@+id/cjats_received_image_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:background="@drawable/chat_time_gradient"
            android:textColor="@android:color/white"
            tools:text="18:04" />

    </FrameLayout>


</FrameLayout>