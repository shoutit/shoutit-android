<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/post_signup_bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v4.view.ViewPager
                android:id="@+id/post_signup_second_view_pager"
                android:layout_width="match_parent"
                android:layout_height="426dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="30dp"
                tools:background="@android:color/black" />

            <com.viewpagerindicator.CirclePageIndicator
                android:id="@+id/post_signup_second_view_page_indicators"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="12dp"
                app:fillColor="@android:color/white"
                app:pageColor="@color/shout_page_indicator" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/post_signup_skip_btn"
                    style="@style/ButtonWithStroke"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginStart="14dp"
                    android:background="@drawable/selector_white_button_with_stroke"
                    android:text="@string/post_signup_skip"
                    android:textColor="@color/accent_blue" />

                <Button
                    android:id="@+id/post_signup_done_btn"
                    style="@style/ButtonWithStroke"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="14dp"
                    android:layout_marginRight="14dp"
                    android:background="@drawable/selector_green_button_with_stroke"
                    android:text="@string/post_signup_done"
                    android:textColor="@android:color/white"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/post_signup_next_btn"
                    style="@style/ButtonWithStroke"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="14dp"
                    android:layout_marginRight="14dp"
                    android:background="@drawable/selector_blue_button_with_stroke"
                    android:text="@string/post_signup_next"
                    android:textColor="@android:color/white" />

            </RelativeLayout>

        </LinearLayout>

        <include layout="@layout/base_progress" />

    </FrameLayout>

</ScrollView>