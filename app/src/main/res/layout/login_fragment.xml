<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:focusableInTouchMode="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="30dp">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/register_email_edittext_layout"
                style="@style/BlueInputStyle"
                app:hintTextAppearance="@style/BlueInputStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/register_email_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/BlueEditText"
                    android:imeActionLabel="@string/login_next_label"
                    android:hint="@string/login_email_hint"
                    android:inputType="textEmailAddress"
                    android:nextFocusDown="@+id/register_password_edittext"/>

            </android.support.design.widget.TextInputLayout>

            <FrameLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputLayout
                    android:layout_marginRight="24dp"
                    android:layout_marginEnd="24dp"
                    android:id="@+id/register_password_edittext_layout"
                    style="@style/BlueInputStyle"
                    app:hintTextAppearance="@style/BlueInputStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/register_password_edittext"
                        android:inputType="textFilter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:theme="@style/BlueEditText"
                        android:imeActionLabel="@string/login_done_label"
                        android:singleLine="true"
                        android:hint="@string/login_password_hint"
                        android:imeOptions="actionDone"/>

                </android.support.design.widget.TextInputLayout>

                <CheckBox
                    android:id="@+id/login_lock_password"
                    android:checked="true"
                    android:background="?selectableItemBackground"
                    android:button="@drawable/selector_password_lock"
                    android:layout_marginTop="4dp"
                    android:layout_gravity="end|center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </FrameLayout>

            <Button
                android:id="@+id/register_proceed_btn"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="14dp"
                android:text="@string/login_btn_text"
                android:textColor="@android:color/white"/>

            <TextView
                android:id="@+id/login_forgot_password_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="22dp"
                android:background="?selectableItemBackground"
                android:padding="8dp"
                android:text="@string/register_forgot_password"
                android:textColor="@color/login_forgot_password"
                android:textSize="12sp"/>

            <LinearLayout
                android:id="@+id/login_sign_up_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="26dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/login_sign_up_new"
                    android:textColor="@color/black_38"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="sans-serif-medium"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:text="@string/login_sign_up_text"
                    android:textColor="@color/colorAccent"
                    android:textSize="16sp"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <include
                android:id="@+id/login_bottom_actions_container"
                layout="@layout/login_bottom_actions"/>

        </LinearLayout>

    </ScrollView>

    <FrameLayout
        android:id="@+id/fragment_login_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_20"
        android:clickable="true"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

    </FrameLayout>

</FrameLayout>