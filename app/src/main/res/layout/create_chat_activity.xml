<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        style="@style/AppTheme.BaseToolbarStyle"
        android:id="@+id/create_chat_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_6"
        android:fillViewport="true"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/create_public_chat_header"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@android:color/white"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/create_chat_avatar"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginBottom="12dp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="12dp"
                        android:background="@color/media_image_background"
                        android:padding="12dp"
                        android:src="@drawable/add_media"/>

                    <EditText
                        android:layout_marginLeft="4dp"
                        android:layout_marginStart="4dp"
                        android:theme="@style/BlueEditText"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/create_chat_subject"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/create_public_chat_subject"/>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/create_public_chat_location"
                    android:textAllCaps="true"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@android:color/white">

                    <ImageView
                        android:id="@+id/create_chat_location_flag"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="8dp"
                        tools:src="@drawable/al"/>

                    <TextView
                        android:id="@+id/create_chat_location_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_weight="7"
                        tools:text="Dubai, United Arab Emirates"/>

                    <Button
                        android:id="@+id/create_chat_location_change"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="3"
                        android:background="?selectableItemBackground"
                        android:text="@string/create_public_chat_change_location"
                        android:textColor="@color/accent_blue"/>

                </LinearLayout>


            </LinearLayout>

            <Button
                android:id="@+id/create_chat_create"
                android:layout_width="match_parent"
                style="@style/BaseButtonDefaultBackgroundStyle"
                android:layout_gravity="bottom"
                android:layout_marginBottom="20dp"
                android:textColor="@android:color/white"
                android:text="@string/create_chat_create"/>

            <FrameLayout
                android:id="@+id/create_chat_progress"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/progress_dim"
                android:visibility="gone">

                <ProgressBar
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </FrameLayout>

        </FrameLayout>

    </ScrollView>
</LinearLayout>