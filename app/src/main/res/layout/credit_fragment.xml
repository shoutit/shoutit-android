<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_6"
        android:fillViewport="true"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="10dp"
                          android:text="Shoutit credit is virtual currency that can be earned and spent while using Shoutit. "/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@android:color/white"
                    android:elevation="2dp"
                    android:orientation="vertical">

                    <FrameLayout
                        android:id="@+id/credit_balance"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:background="?selectableItemBackground">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|start"
                            android:layout_marginLeft="12dp"
                            android:layout_marginStart="12dp"
                            android:src="@drawable/ic_credits"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|start"
                            android:layout_marginLeft="60dp"
                            android:layout_marginStart="60dp"
                            android:layout_marginTop="10dp"
                            android:text="Your balance"
                            android:textColor="@color/black_87"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|start"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="60dp"
                            android:layout_marginStart="60dp"
                            android:textSize="12sp"
                            android:text="Click to view Transactions"/>

                        <TextView
                            android:id="@+id/credit_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|end"
                            android:layout_marginBottom="10dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/colorAccent"
                            tools:text="102"/>

                    </FrameLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginLeft="48dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginStart="48dp"
                        android:background="@color/black_20"/>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/invite_friends_suggestions"
                    android:textAllCaps="true"
                    android:textColor="@color/black_54"
                    android:textSize="14sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@android:color/white"
                    android:elevation="2dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/credit_complete_profile"
                        style="@style/InviteFriendsItem"
                        android:layout_gravity="center_vertical|start"
                        android:drawableLeft="@drawable/ic_profile"
                        android:drawablePadding="16dp"
                        android:drawableStart="@drawable/ic_profile"
                        android:text="Complete your Profile"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginLeft="48dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginStart="48dp"
                        android:background="@color/black_20"/>

                    <TextView
                        android:id="@+id/credit_facebook"
                        style="@style/InviteFriendsItem"
                        android:layout_gravity="center_vertical|start"
                        android:drawableLeft="@drawable/ic_share_blue"
                        android:drawablePadding="16dp"
                        android:drawableStart="@drawable/ic_share_blue"
                        android:text="Sharing on Facebook"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginLeft="48dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginStart="48dp"
                        android:background="@color/black_20"/>

                    <TextView
                        android:id="@+id/credit_invite_friends"
                        style="@style/InviteFriendsItem"
                        android:layout_gravity="center_vertical|start"
                        android:drawableLeft="@drawable/contacts_icon"
                        android:drawablePadding="16dp"
                        android:drawableStart="@drawable/contacts_icon"
                        android:text="Inviting Friends"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginLeft="48dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginStart="48dp"
                        android:background="@color/black_20"/>

                    <TextView
                        android:id="@+id/credit_listen"
                        style="@style/InviteFriendsItem"
                        android:layout_gravity="center_vertical|start"
                        android:drawableLeft="@drawable/ic_stop_listening"
                        android:drawablePadding="16dp"
                        android:drawableStart="@drawable/ic_stop_listening"
                        android:text="Listening to friends"/>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/invite_friends_invite_friends"
                    android:textAllCaps="true"
                    android:textColor="@color/black_54"
                    android:textSize="14sp"/>

                <LinearLayout
                    android:id="@+id/credit_promote_shout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@android:color/white"
                    android:elevation="2dp"
                    android:orientation="vertical">

                    <TextView
                        style="@style/InviteFriendsItem"
                        android:layout_gravity="center_vertical|start"
                        android:drawableLeft="@drawable/ic_promote_shouts"
                        android:drawablePadding="16dp"
                        android:drawableStart="@drawable/ic_promote_shouts"
                        android:text="Promoting Shouts"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginLeft="48dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginStart="48dp"
                        android:background="@color/black_20"/>

                </LinearLayout>

            </LinearLayout>

        </FrameLayout>

    </ScrollView>

</LinearLayout>