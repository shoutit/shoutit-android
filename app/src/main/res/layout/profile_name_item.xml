<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/profile_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginStart="80dp"
        android:paddingTop="6dp"
        android:textColor="@color/profile_name"
        android:textSize="16sp"
        tools:text="Doris Schultz" />

    <TextView
        android:id="@+id/profile_user_nick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/profile_user_name"
        android:layout_alignStart="@+id/profile_user_name"
        android:layout_below="@+id/profile_user_name"
        android:layout_marginTop="3dp"
        android:textColor="@color/black_54"
        android:paddingBottom="2dp"
        android:textSize="12sp"
        tools:text="Doris90" />

    <TextView
        android:id="@+id/profile_user_listening_to_you"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_user_name"
        android:layout_marginTop="3dp"
        android:textColor="@color/black_38"
        android:textSize="12sp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:paddingBottom="2dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:visibility="gone"
        tools:visibility="visible"
        android:background="@drawable/shape_profile_listening"
        android:layout_toRightOf="@+id/profile_user_nick"
        android:layout_toEndOf="@+id/profile_user_nick"
        tools:text="@string/profile_listening_to_you" />

    <ImageView
        android:id="@+id/profile_fragment_edit_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp"
        android:background="?selectableItemBackground"
        android:padding="6dp"
        android:src="@drawable/ic_more" />

</RelativeLayout>