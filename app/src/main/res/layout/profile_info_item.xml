<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/profile_fragment_listening"
            android:layout_toStartOf="@+id/profile_fragment_listening"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/profile_listeners_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_listeners"
                android:drawablePadding="6dp"
                android:drawableStart="@drawable/ic_listeners"
                android:gravity="center"
                android:textColor="@color/black_54"
                android:textSize="14sp"
                tools:text="3K" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:text="Listeners"
                android:textColor="@color/black_54"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/profile_fragment_listening"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/profile_listening_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_listeners"
                android:drawablePadding="6dp"
                android:drawableStart="@drawable/ic_listeners"
                android:gravity="center"
                android:textColor="@color/black_54"
                android:textSize="14sp"
                tools:text="3K" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:text="@string/profile_listening"
                android:textColor="@color/black_54"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/profile_fragment_listening"
            android:layout_toRightOf="@+id/profile_fragment_listening"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/profile_interests_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_tags"
                android:drawablePadding="6dp"
                android:drawableStart="@drawable/ic_tags"
                android:gravity="center"
                android:textColor="@color/black_54"
                android:textSize="14sp"
                tools:text="3K" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:text="@string/profile_interests"
                android:textColor="@color/black_54"
                android:textSize="14sp" />

        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="9dp"
        android:layout_marginTop="5dp"
        android:background="#1f000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="26dp"
        android:orientation="horizontal"
        android:paddingEnd="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingStart="16dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/ic_bio" />

        <TextView
            android:id="@+id/profile_bio_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="1dp"
            android:text="@string/profile_empty_field"
            android:textColor="@color/profile_text_color_light"
            android:textSize="12sp"
            tools:text="I have hinted that I would often jerk poor Queequeg from between the whale and the shipâ€”where he would occasionally fall, from the incessant rolling and swaying of both. " />

    </LinearLayout>

    <LinearLayout
        style="@style/ProfileInfo"
        android:layout_marginBottom="18dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/ic_website" />

        <TextView
            android:id="@+id/profile_website_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile_empty_field"
            android:textColor="@color/profile_text_color_light"
            android:textSize="12sp"
            tools:text="www.shoutit.com" />

    </LinearLayout>

    <LinearLayout
        style="@style/ProfileInfo"
        android:layout_marginBottom="18dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/ic_joined" />

        <TextView
            android:id="@+id/profile_date_joined_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile_empty_field"
            android:textColor="@color/profile_text_color_light"
            android:textSize="12sp"
            tools:text="Joind 10/13/2014" />

    </LinearLayout>

    <LinearLayout
        style="@style/ProfileInfo"
        android:layout_marginBottom="10dp">

        <ImageView
            android:id="@+id/profile_country_iv"
            android:layout_width="16dp"
            android:layout_height="14dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:paddingLeft="2dp"
            tools:src="@drawable/pl" />

        <TextView
            android:id="@+id/profile_country_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile_empty_field"
            android:textColor="@color/profile_text_color_light"
            android:textSize="12sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/shadow_line"/>

</LinearLayout>