<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="actionBarStyle">@style/AppTheme.BaseToolbarStyle</item>
        <item name="android:windowBackground">@drawable/window</item>
    </style>

    <style name="FacebookButton" parent="AppTheme">
        <item name="colorButtonNormal">@color/login_facebook_button</item>
    </style>

    <style name="GoogleButton" parent="AppTheme">
        <item name="colorButtonNormal">@color/login_google_button</item>
    </style>

    <style name="LoginButton" parent="AppTheme">
        <item name="colorButtonNormal">@color/login_signup_button</item>
    </style>

    <style name="TranslucentStatusBar" parent="AppTheme"/>

    <style name="IntroActivityTheme" parent="TranslucentStatusBar">
        <item name="android:windowBackground">@drawable/gradient_intro</item>
    </style>

    <style name="AppTheme.BaseToolbarStyle" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:theme">@style/AppTheme.AppBarOverlay</item>
        <item name="popupTheme">@style/AppTheme.PopupOverlay</item>
        <item name="elevation">4dp</item>
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!-- Needed for UserVoice library -->
    <style name="UserVoiceTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="LoginBottomButtons">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/black_54</item>
        <item name="android:gravity">center</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
    </style>

    <style name="WhiteToolbar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@color/white_toolbar_arrow</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="SideMenuItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/black_54</item>
        <item name="android:textSize">16sp</item>
        <item name="android:drawablePadding">32dp</item>
        <item name="android:background">@drawable/selector_menu_item</item>
    </style>

    <style name="ProfileInputStyle" parent="@style/TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/black_38</item>
        <item name="android:textColor">@color/accent_blue</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="BlueInputStyle" parent="@style/TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/black_38</item>
        <item name="android:textColor">@color/accent_blue</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BlueEditText" parent="ThemeOverlay.AppCompat">
        <item name="colorControlActivated">@color/accent_blue</item>
        <item name="colorControlHighlight">@color/accent_blue</item>
    </style>

    <style name="BlueSeekBar" parent="ThemeOverlay.AppCompat">
        <item name="colorControlNormal">@color/accent_blue</item>
        <item name="colorControlActivated">@color/accent_blue</item>
        <item name="colorControlHighlight">@color/accent_blue</item>
    </style>

    <style name="SearchEditText" parent="ThemeOverlay.AppCompat">
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@android:color/white</item>
        <item name="colorControlHighlight">@android:color/white</item>
    </style>

    <style name="WhiteProgressBar" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">@android:color/white</item>
    </style>

    <style name="AppTheme.WithDrawer"/>

    <style name="SettingsItem">
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingStart" tools:ignore="NewApi">16dp</item>
        <item name="android:textColor">@color/black_54</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">?selectableItemBackground</item>
    </style>

    <style name="ShoutCardSection">
        <item name="android:textColor">@color/black_54</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingStart" tools:ignore="NewApi">8dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:maxLines">2</item>
        <item name="android:paddingEnd" tools:ignore="NewApi">4dp</item>
    </style>

    <style name="ShoutCardSectionText">
        <item name="android:textColor">@color/black_54</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_marginStart" tools:ignore="NewApi">6dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ShoutCardItemLight">
        <item name="android:background">@android:color/white</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="ShoutCardItemDark" parent="ShoutCardItemLight">
        <item name="android:background">@color/shout_item_dark</item>
    </style>

    <style name="ShoutItemHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingStart" tools:ignore="NewApi">10dp</item>
        <item name="android:textColor">@color/black_54</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="ShoutBottomBarItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:maxLines">2</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="ProfileInfo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingEnd" tools:ignore="NewApi">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingStart" tools:ignore="NewApi">16dp</item>
        <item name="android:paddingLeft">16dp</item>
    </style>

    <style name="ShoutBottomBar" parent="ThemeOverlay.AppCompat.Dark"/>

    <style name="ButtonWithStroke">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:minWidth">112dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
