<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/message_background_owner"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="8dp"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:paddingTop="8dp">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp">

            <ImageView
                android:id="@+id/chats_sent_shout_image_imageview"
                android:layout_width="@dimen/chat_sent_shout_image_width"
                android:layout_height="@dimen/chat_sent_shout_image_height"
                android:scaleType="centerCrop"
                tools:src="@drawable/ca" />

            <TextView
                android:id="@+id/chats_sent_shout_date_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|top"
                android:background="@drawable/chat_time_gradient"
                android:textColor="@android:color/white"
                tools:text="18:04" />
        </FrameLayout>

        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content">

            <TextView
                android:layoutDirection="locale"
                android:id="@+id/chats_message_shout_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:lines="1"
                tools:text="Cotton wool " />

            <TextView
                android:id="@+id/chats_shout_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/chats_message_shout_description"
                android:textColor="@color/black_38"
                tools:text="John Smith" />

            <TextView
                android:id="@+id/chats_shout_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/chats_message_shout_description"
                android:textColor="@color/colorAccent"
                tools:text="$44 USD" />

        </RelativeLayout>
    </LinearLayout>
</FrameLayout>
