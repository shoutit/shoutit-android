<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="6dp"
    android:layout_gravity="left"
    android:orientation="horizontal"
    android:layoutDirection="ltr"
    android:padding="4dp">

    <ImageView
        android:id="@+id/chats_received_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="12dp"
        android:scaleType="centerCrop"
        android:visibility="gone"
        tools:src="@drawable/ca"
        tools:visibility="visible" />

    <RelativeLayout
        android:layout_marginLeft="8dp"
        android:layout_width="106dp"
        android:layout_height="106dp"
        android:layoutDirection="locale"
        android:background="@drawable/message_background_other">

        <ImageView
            android:layout_centerInParent="true"
            android:id="@+id/cjats_received_image_imageview"
            android:layout_width="90dp"
            android:layout_height="96dp"
            android:scaleType="centerCrop"
            tools:src="@drawable/ca" />

        <TextView
            android:id="@+id/cjats_received_image_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_alignBottom="@+id/cjats_received_image_imageview"
            android:layout_alignEnd="@+id/cjats_received_image_imageview"
            android:layout_alignRight="@+id/cjats_received_image_imageview"
            android:background="@drawable/chat_time_gradient"
            android:textColor="@android:color/white"
            tools:text="18:04" />

    </RelativeLayout>

</LinearLayout>