<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chats_received_profile_root_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="6dp"
    android:gravity="left"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/chats_received_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="12dp"
        android:scaleType="centerCrop"
        android:visibility="gone"
        tools:src="@drawable/ca"
        tools:visibility="visible" />

    <LinearLayout
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:background="@drawable/message_background_other"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="8dp"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:paddingTop="8dp">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/chats_received_profile_image_imageview"
                android:layout_width="150dp"
                android:layout_height="96dp"
                android:scaleType="centerCrop"
                android:src="@drawable/pattern_placeholder" />

            <TextView
                android:id="@+id/chats_received_profile_date_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|top"
                android:background="@drawable/chat_time_gradient"
                android:textColor="@android:color/white"
                tools:text="18:04" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/chats_message_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:ellipsize="end"
                tools:text="John Smithdsfdsfdsf" />

            <TextView
                android:id="@+id/chats_profile_listeners"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/black_38"
                tools:text="126 Listeners" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>


