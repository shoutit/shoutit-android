<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="6dp"
    android:orientation="horizontal"
    android:paddingEnd="20dp"
    android:paddingRight="20dp">

    <ImageView
        android:id="@+id/chats_received_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:scaleType="centerCrop"
        android:visibility="invisible"
        tools:visibility="visible"
        tools:src="@drawable/ca" />

    <FrameLayout
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/message_background_other"
        android:paddingLeft="16dp"
        android:paddingRight="8dp"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/chats_received_message_message_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:textSize="16sp"
            android:autoLink="email|phone|web"
            android:textIsSelectable="true"
            tools:text="This is a one liner message This is a one liner message This is a one liner message This is a one liner message This is a one liner message This is a one liner message This is a one liner message" />

        <TextView
            android:id="@+id/chats_received_message_date_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:textSize="12sp"
            tools:text="18:04" />

    </FrameLayout>
</LinearLayout>